@page
@model DestinationsModel
@{
    ViewData["Title"] = "Destinations";
}
<h2 class="mb-3">Popular Destinations</h2>
<p class="text-muted">A few ideas to spark your travel. We customize every trip.</p>

<div class="row g-4">
  <div class="col-md-4">
    <div class="card h-100 card-destination">
      <img src="https://images.unsplash.com/photo-1505764706515-aa95265c5abc?q=80&w=1200" alt="Paris">
      <div class="card-body">
        <h5 class="card-title">Paris, France</h5>
        <p class="card-text">Art, cafés, the Seine—romance at every corner.</p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card h-100 card-destination">
      <img src="https://images.unsplash.com/photo-1518684079-3c830dcef090?q=80&w=1200" alt="Kyoto">
      <div class="card-body">
        <h5 class="card-title">Kyoto, Japan</h5>
        <p class="card-text">Temples, tea, and tranquil gardens steeped in history.</p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card h-100 card-destination">
      <img src="https://images.unsplash.com/photo-1518683406912-7d88f473eace?q=80&w=1200" alt="Costa Rica">
      <div class="card-body">
        <h5 class="card-title">Costa Rica</h5>
        <p class="card-text">Rainforests, surf, and wildlife—pure pura vida.</p>
      </div>
    </div>
  </div>
</div>
